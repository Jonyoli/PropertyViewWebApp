<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">PropertyViewWebApp</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="listings">
                <span class="oi oi-plus" aria-hidden="true"></span> Listings
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="amenities">
                <span class="oi oi-plus" aria-hidden="true"></span> Amenities
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="types">
                <span class="oi oi-plus" aria-hidden="true"></span> Types
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
